{
    // === File & Search Exclusions (Performance) ===
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.next": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/.nuxt": true,
        "**/out": true,
        "**/.cache": true,
        "**/bin": true,
        "**/obj": true,
        "**/packages": true,
        "**/.vs": true,
        "**/TestResults": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/dist": true,
        "**/*.lock": true,
        "**/pnpm-lock.yaml": true,
        "**/package-lock.json": true,
        "**/bin": true,
        "**/obj": true,
        "**/packages": true
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/dist/**": true,
        "**/.next/**": true,
        "**/bin/**": true,
        "**/obj/**": true,
        "**/packages/**": true
    },

    // === Editor Performance ===
    "editor.largeFileOptimizations": true,
    "editor.maxTokenizationLineLength": 10000,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,

    // === Claude Code Settings ===
    "claudeCode.allowDangerouslySkipPermissions": true,
    "claudeCode.initialPermissionMode": "bypassPermissions",
    "claudeCode.preferredLocation": "panel",
    "claudeCode.environmentVariables": [],

    // === GitHub Copilot ===
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.chat.anthropic.tools.websearch.enabled": true,
    "github.copilot.chat.anthropic.tools.websearch.maxUses": 20,

    // === Git Settings ===
    "git.confirmSync": false,
    "git.autofetch": true,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",

    // === C# / .NET Settings ===
    "dotnet.server.useOmnisharp": false,
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "csharp.maxProjectFileCountForDiagnosticAnalysis": 5000,
    "csharp.debug.enableHotReload": false,
    "csharp.semanticHighlighting.enabled": true,
    "csharp.suppressHiddenDiagnostics": false,
    "csharp.suppressBuildAssetsNotification": false,
    "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "openFiles",
    "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "openFiles",
    "csdevkit.dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "openFiles",
    "csdevkit.dotnet.backgroundAnalysis.compilerDiagnosticsScope": "openFiles",

    // === Editor Settings ===
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": null,
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp"
    },
    "[sql]": {
        "editor.defaultFormatter": "ms-mssql.mssql"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },

    // === MCP & Chat ===
    "chat.mcp.gallery.enabled": true,

    // === Security & Telemetry ===
    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": false,

    // === Terminal Settings ===
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    }
}
