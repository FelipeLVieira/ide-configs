# Claude Code Telegram Bot - Example Configuration
# Copy to .env and customize

# === REQUIRED ===
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot username (without @)
TELEGRAM_BOT_USERNAME=your_bot_username

# Base directory for project access (absolute path)
# Windows: C:\Users\YourName\projects
# macOS/Linux: /home/yourname/projects
APPROVED_DIRECTORY=

# Your Telegram user ID (get from @userinfobot)
# Comma-separated for multiple users
ALLOWED_USERS=

# === CLAUDE SETTINGS ===
# Use CLI subprocess mode (uses existing Claude Code login)
USE_SDK=false

# Path to Claude CLI (REQUIRED on Windows, auto-detected on macOS/Linux)
# Windows: C:\Users\YourName\AppData\Roaming\npm\claude.cmd
# macOS/Linux: usually auto-detected from PATH
CLAUDE_CLI_PATH=
CLAUDE_BINARY_PATH=

# Leave empty - not needed with CLI mode
ANTHROPIC_API_KEY=

# Model to use (opus, sonnet, haiku) - defaults to your CLI setting
CLAUDE_MODEL=opus

# === OPTIONAL SETTINGS ===
CLAUDE_MAX_TURNS=20
CLAUDE_TIMEOUT_SECONDS=300
CLAUDE_MAX_COST_PER_USER=50.0

# Features
ENABLE_GIT_INTEGRATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_QUICK_ACTIONS=true
ENABLE_IMAGE_UPLOADS=true

# Storage
DATABASE_URL=sqlite:///data/bot.db
SESSION_TIMEOUT_HOURS=24

# Logging
LOG_LEVEL=INFO
ENVIRONMENT=development
