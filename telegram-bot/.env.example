# Claude Code Telegram Bot - Example Configuration
# Copy to .env and customize
# Based on: https://github.com/RichardAtCT/claude-code-telegram

# === REQUIRED ===
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot username (without @)
TELEGRAM_BOT_USERNAME=your_bot_username

# Base directory for project access (absolute path)
# Windows: C:\Users\YourName\projects
# macOS/Linux: /home/yourname/projects
APPROVED_DIRECTORY=

# Your Telegram user ID (get from @userinfobot)
# Comma-separated for multiple users
# Leave empty to allow all users (NOT recommended for production)
ALLOWED_USERS=

# === CLAUDE SETTINGS ===
# Use CLI subprocess mode (uses existing Claude Code login)
USE_SDK=false

# Path to Claude CLI (REQUIRED on Windows, auto-detected on macOS/Linux)
# Windows: C:\Users\YourName\AppData\Roaming\npm\claude.cmd
# macOS/Linux: usually auto-detected from PATH
CLAUDE_CLI_PATH=
CLAUDE_BINARY_PATH=

# Leave empty - not needed with CLI mode
ANTHROPIC_API_KEY=

# Model to use - full model ID required
# Opus 4.5: claude-opus-4-5-20251101
# Sonnet: claude-sonnet-4-20250514
CLAUDE_MODEL=claude-opus-4-5-20251101

# Maximum conversation turns before requiring new session
CLAUDE_MAX_TURNS=20

# Timeout for Claude operations (seconds)
CLAUDE_TIMEOUT_SECONDS=300

# Maximum cost per user in USD
CLAUDE_MAX_COST_PER_USER=50.0

# Allowed Claude tools (comma-separated)
CLAUDE_ALLOWED_TOOLS=Read,Write,Edit,Bash,Glob,Grep,LS,Task,MultiEdit,NotebookRead,NotebookEdit,WebFetch,TodoRead,TodoWrite,WebSearch

# === RATE LIMITING ===
# Number of requests allowed per window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# Burst capacity for rate limiting
RATE_LIMIT_BURST=20

# === FEATURES ===
ENABLE_GIT_INTEGRATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_QUICK_ACTIONS=true
ENABLE_IMAGE_UPLOADS=true
ENABLE_CONVERSATION_MODE=true
ENABLE_SESSION_EXPORT=true

# MCP (Model Context Protocol) - optional
ENABLE_MCP=false
MCP_CONFIG_PATH=

# === ADVANCED SETTINGS ===
# Maximum file upload size in MB
MAX_FILE_UPLOAD_SIZE_MB=100

# Maximum files to preview in archive analysis
MAX_ARCHIVE_PREVIEW_FILES=5

# Quick actions timeout in seconds
QUICK_ACTIONS_TIMEOUT=120

# Git operations timeout in seconds
GIT_OPERATIONS_TIMEOUT=30

# === STORAGE ===
DATABASE_URL=sqlite:///data/bot.db
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=5

# === MONITORING ===
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=false

# Enable anonymous telemetry
ENABLE_TELEMETRY=false

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# === SECURITY OVERRIDE (DANGER) ===
# Only enable on personal/trusted setups
# Allows full shell access (>, |, &, ;, etc.)
# DISABLE_COMMAND_VALIDATION=true
