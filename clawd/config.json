{
  "defaultModel": "opus",
  "autoApprove": false,
  "skipPermissions": true,
  "maxIterations": 50,
  "planFirst": true,
  "verbose": false,
  "logLevel": "info",
  "outputDir": "~/.clawd/output",
  "rateLimits": {
    "_comment": "Prevent HTTP 429 errors from Anthropic API",
    "maxConcurrent": 2,
    "subagents": {
      "maxConcurrent": 2
    },
    "retryOnRateLimit": true,
    "retryDelayMs": 5000
  },
  "projects": {
    "game-project": {
      "path": "~/repos/game-project",
      "description": "Channel-based social auto-battle RPG game",
      "techStack": ["next.js", "typescript", "supabase", "react-three-fiber", "capacitor", "zustand"],
      "testCommand": "pnpm test",
      "buildCommand": "pnpm build"
    },
    "trading-bot": {
      "path": "~/repos/trading-bot",
      "description": "Polymarket algorithmic trading bot with multiple strategies",
      "techStack": ["python", "pydantic", "polymarket", "websocket", "sqlite"],
      "testCommand": "pytest tests/ -v",
      "buildCommand": "python -m build"
    },
    "crm-app": {
      "path": "~/repos/crm-app",
      "description": "Legal case management system for law firms",
      "techStack": ["next.js", "typescript", "supabase", "tailwind", "radix-ui", "zod"],
      "testCommand": "npm run test:all",
      "buildCommand": "npm run build"
    },
    "health-app": {
      "path": "~/repos/health-app",
      "description": "Health tracking app with BMI and nutrition logging",
      "techStack": ["expo", "react-native", "typescript", "zustand", "revenucat", "admob"],
      "testCommand": "npm test",
      "buildCommand": "expo build"
    },
    "finance-app": {
      "path": "~/repos/bill-subscriptions-organizer-tracker",
      "description": "Offline-first bill and subscription tracker",
      "techStack": ["expo", "react-native", "typescript", "zustand", "drizzle", "sqlite", "revenucat"],
      "testCommand": "npm test",
      "buildCommand": "expo build"
    },
    "translator-app": {
      "path": "~/repos/simple-translator-app",
      "description": "OCR and translation app using ML Kit",
      "techStack": ["react-native", "typescript", "zustand", "ml-kit", "revenucat", "admob"],
      "testCommand": "npm test",
      "buildCommand": "npx react-native build-android"
    },
    "links-app": {
      "path": "~/repos/links-app",
      "description": "Customizable link-in-bio platform for creators",
      "techStack": ["next.js", "typescript", "supabase", "stripe", "tailwind", "radix-ui", "redis"],
      "testCommand": "npm test",
      "buildCommand": "npm run build"
    }
  },
  "prompts": {
    "planInit": "Create a detailed implementation plan following SOLID principles and clean code practices. Break down into small, testable steps.",
    "codeReview": "Review code for security vulnerabilities, memory leaks, and adherence to project patterns. Reference the deslop principles.",
    "testGeneration": "Generate comprehensive tests covering happy path, edge cases, and error conditions."
  },
  "hooks": {
    "beforePlan": "echo 'Starting planning phase...'",
    "afterExecution": "echo 'Execution complete. Review changes before committing.'"
  },
  "accounts": {
    "_comment": "Multi-account config for rate-limit fallback. Managed by ~/.clawd/adapter.js",
    "primary": {
      "name": "felipe",
      "email": "felipe.lv.90@gmail.com",
      "configDir": null
    },
    "secondary": {
      "name": "wisedigital",
      "email": "wisedigitalinc@gmail.com",
      "configDir": "~/.claude-wisedigital"
    }
  }
}
